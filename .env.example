# Database Configuration
# Choose one database option:

# Option 1: SQLite (Development - Default)
DATABASE_URL="file:./dev.db"

# Option 2: PostgreSQL (Production Recommended)
# DATABASE_URL="postgresql://username:password@localhost:5432/bus_management?schema=public"

# Option 3: MySQL
# DATABASE_URL="mysql://username:password@localhost:3306/bus_management"

# JWT Secret (Change in production!)
JWT_SECRET="your-secret-key-change-in-production"

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS) - set to your Vercel/hosted frontend URL in production
FRONTEND_URL="http://localhost:3000"

# Frontend only: Backend API URL (for deployed frontend calling deployed backend)
# Leave empty when frontend and backend are same origin (e.g. local dev)
# NEXT_PUBLIC_API_URL="https://your-backend.railway.app"

# Optional: Database connection pool settings (for PostgreSQL/MySQL)
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# Optional: For map integration
# GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
# MAPBOX_API_KEY="your-mapbox-api-key"
