{
  "name": "bus-management-system",
  "version": "1.0.0",
  "description": "Smart Web-Based Bus Management and Digital Ticketing System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:backend": "tsx watch server/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "next build",
    "build:backend": "tsc --project server/tsconfig.json",
    "start": "next start",
    "start:backend": "node dist/server/index.js",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "seed": "tsx scripts/seed.ts",
    "postinstall": "prisma generate",
    "db:push:prod": "node scripts/use-postgres-schema.js && prisma db push",
    "build:railway": "npm ci && node scripts/use-postgres-schema.js && prisma generate",
    "start:railway": "prisma db push --accept-data-loss 2>/dev/null || true && npx tsx server/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.6",
    "date-fns": "^3.6.0",
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.427.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.33",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.0",
    "prisma": "^5.19.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0"
  }
}
